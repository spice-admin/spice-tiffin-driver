---
// src/pages/contact-us.astro
import CustomerLayout from "../layouts/Layout.astro"; // Adjust path

const pageTitle = "Contact Us";
const companyName = "SpiceBar"; // Replace if needed
const phoneNumber = "+14162618480"; // Use E.164 format for tel link
const displayPhoneNumber = "416-261-8480"; // How you want it displayed
const addressLine = "817 Brimley Rd, Scarborough, ON M1J 1C9";
const emailAddress = "spicebar143@gmail.com";

// Encode address for map link
const mapQuery = encodeURIComponent(`${addressLine}, Canada`);
const mapLink = `https://www.google.com/maps/search/?api=1&query=${mapQuery}`;
---

<CustomerLayout title={pageTitle}>
  {/* Use a container similar to privacy/auth pages */}
  <section class="contact-page-container">
    <div class="contact-content-card">
      {/* Reuse .auth-form-card or use specific class */}
      <h1 class="contact-title">{pageTitle}</h1>
      <p class="contact-subtitle">
        We'd love to hear from you! Here's how you can reach us.
      </p>

      {/* Contact Method Sections */}
      <div class="contact-methods-grid">
        {/* Call Us Section */}
        <div class="contact-section">
          <div class="contact-icon-wrapper">
            {/* Phone Icon SVG */}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="contact-icon"
              ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path></svg
            >
          </div>
          <h2 class="contact-heading">Call Us</h2>
          <p class="contact-info">Reach out for immediate assistance.</p>
          <a
            href={`tel:${phoneNumber}`}
            class="contact-link contact-link-prominent">{displayPhoneNumber}</a
          >
        </div>

        {/* Find Us Section */}
        <div class="contact-section">
          <div class="contact-icon-wrapper">
            {/* Map Pin Icon SVG */}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="contact-icon"
              ><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
              ></path><circle cx="12" cy="10" r="3"></circle></svg
            >
          </div>
          <h2 class="contact-heading">Find Us</h2>
          <p class="contact-info">{addressLine}</p>
          {/* Link to Google Maps */}
          <a
            href={mapLink}
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link">Get Directions</a
          >
        </div>

        {/* Email Us Section */}
        <div class="contact-section">
          <div class="contact-icon-wrapper">
            {/* Envelope Icon SVG */}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="contact-icon"
              ><path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path><polyline points="22,6 12,13 2,6"></polyline></svg
            >
          </div>
          <h2 class="contact-heading">Email Us</h2>
          <p class="contact-info">For inquiries, support, or feedback.</p>
          <a
            href={`mailto:${emailAddress}`}
            class="contact-link contact-link-prominent">{emailAddress}</a
          >
        </div>
      </div>

      {/* Optional: Add operating hours or other notes */}
      <div class="contact-notes">
        <p>Our team is available during standard business hours.</p>
      </div>
    </div>
  </section>
</CustomerLayout>

<style>
  /* Basic styles for the contact page - Add to global.css or scope */
  .contact-page-container {
    max-width: 900px; /* Slightly wider for grid */
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .contact-content-card {
    background-color: #fff;
    padding: 2.5rem; /* More padding */
    border-radius: 8px;
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.05),
      0 5px 10px rgba(0, 0, 0, 0.05);
  }

  .contact-title {
    text-align: center;
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }

  .contact-subtitle {
    text-align: center;
    font-size: 1rem;
    color: #4b5563;
    margin-bottom: 3rem; /* More space before contact methods */
  }

  /* Grid layout for contact methods */
  .contact-methods-grid {
    display: grid;
    grid-template-columns: 1fr; /* Stack on small screens */
    gap: 2.5rem; /* Space between sections */
    margin-bottom: 2.5rem;
  }
  @media (min-width: 768px) {
    /* md breakpoint */
    .contact-methods-grid {
      grid-template-columns: repeat(3, 1fr); /* 3 columns on medium screens */
    }
  }

  .contact-section {
    text-align: center; /* Center content within each section */
    padding: 1rem;
    border: 1px solid #f3f4f6; /* Very light border */
    border-radius: 8px;
    background-color: #f9fafb; /* Light background for sections */
  }

  .contact-icon-wrapper {
    margin-bottom: 1rem;
    display: inline-flex; /* Allows centering */
    padding: 0.75rem;
    background-color: #fff7ed; /* Light orange */
    border-radius: 50%;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
  }

  .contact-icon {
    width: 28px; /* Icon size */
    height: 28px;
    color: #f97316; /* Orange icon color */
    stroke-width: 1.5; /* Adjust stroke width */
  }

  .contact-heading {
    font-size: 1.125rem; /* text-lg */
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #111827; /* Darker text */
  }

  .contact-info {
    font-size: 0.9rem;
    color: #4b5563;
    margin-bottom: 1rem;
    min-height: 40px; /* Ensure consistent height */
  }

  .contact-link {
    display: inline-block; /* Treat link like a button */
    font-size: 0.9rem;
    font-weight: 500;
    color: #f97316; /* Orange link */
    text-decoration: underline;
    word-break: break-word; /* Break long emails/addresses */
    transition: color 0.15s ease-in-out;
  }
  .contact-link:hover {
    color: #ea580c; /* Darker orange on hover */
  }
  .contact-link-prominent {
    /* Make phone/email slightly larger */
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937; /* Darker text */
    text-decoration: none; /* Remove underline */
  }
  .contact-link-prominent:hover {
    color: #f97316; /* Orange on hover */
  }

  .contact-notes {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
    font-size: 0.875rem;
    color: #6b7280;
  }
</style>
